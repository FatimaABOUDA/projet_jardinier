{# templates/user/edit_password.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    .container {
        margin-top: 50px;
        width: 50%;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        margin: auto;
    }

    button {
        margin-top: 20px;
    }

    label {
        font-size: 20px;
        font-weight: bold;
        font-family: 'popins', sans-serif;
    }

    input[type="password"] {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        width: 100%;
    }

    input[type="password"]:focus {
        background-color: #f0f0f0;
        border: 1px solid #000;
    }

    input[type="password"]:hover {
        background-color: #f0f0f0;
        border: 1px solid #000;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }
</style>
{% endblock %}

{% block title %}Change Password{% endblock %}

{% block body %}
    <div class="container">
        <h2>Change Password</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
