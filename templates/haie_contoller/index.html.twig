            border: 1px solid #7484fd;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            background-color: white;
            color: #7484fd;
        }

        table {
                margin-top: 20px;
                border-collapse: collapse;
                width: 100%;
                background-color: #ebe9ff;
            }

            table, th, td {
                border: 1px solid black;
            }

            th, td {
                padding: 8px;
                text-align: left;
            }
            tr:hover {
                background-color: #fff9ff;
            }
            th {
                background-color: #7484fd;
                color: white;
            }
            th:hover {
                background-color: #fff9ff;
                color: #7484fd;
            }
            td:hover {
                background-color: #fff9ff;
                color: #7484fd;
            }


            .example-wrapper a {
                color: #7484fd;
                text-decoration: none;
            }
            .example-wrapper a:hover {
                color: #7484fd;
                text-decoration: underline;
            }
            .example-wrapper a:active {
                color: #7484fd;
                text-decoration: underline;
            }
            .example-wrapper a:focus {
                color: #7484fd;
                text-decoration: underline;
            }
            .example-wrapper a:visited {
                color: #7484fd;
                text-decoration: none;
            }

</style>
    <h1>Liste des Haie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for haie in haies %}
            <tr>
                <td>{{ haie.code }}</td>
                <td>{{ haie.nom }}</td>
                <td>{{ haie.prix }}</td>
                <td>
                    <a href="{{ path('app_haie_contoller_show', {'code': haie.code}) }}">Afficher</a>
                    <a href="{{ path('app_haie_contoller_edit', {'code': haie.code}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

