{# templates/password/change_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <h1>Change Password</h1>
        {{ form_start(form) }}
            {{ form_row(form.oldPassword) }}
            {{ form_row(form.newPassword) }}
            {{ form_row(form.confirmNewPassword) }}

            <button type="submit" class="btn btn-primary">Change Password</button>
        {{ form_end(form) }}
{% endblock %}


